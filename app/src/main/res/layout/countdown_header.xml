<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/countdown_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_text_backgroud"
        android:background="@color/theme_color"
        android:layout_width="match_parent"
        android:layout_height="192dp">

        <LinearLayout
            android:id="@+id/header_text_first_line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/countdown_header_welcome_text_margin"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/header_welcome_image"
                android:layout_width="@dimen/countdown_welcome_image_size"
                android:layout_height="@dimen/countdown_welcome_image_size"
                android:src="@drawable/countdown_wave_hand" />

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move your ideas forward"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/header_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_text_first_line"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="--" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_box_container"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        android:layout_marginStart="@dimen/app_margin_20dp"
        android:layout_marginEnd="@dimen/app_margin_20dp"
        android:layout_marginRight="@dimen/app_margin_20dp"
        android:layout_marginLeft="@dimen/app_margin_20dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/countdown_whole_box_height">

        <RelativeLayout
            android:id="@+id/header_countdown_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/countdown_box_height"
            android:layout_marginTop="@dimen/countdown_box_margin_top"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_four_line">

            <ImageView
                android:id="@+id/header_countdown_box_left_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:layout_marginTop="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="@dimen/app_margin_20dp"
                android:background="@drawable/gift_box" />

            <TextView
                android:id="@+id/header_countdown_box_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:text="Adele new album 30 \n coming soon"
                android:gravity="center"
                android:layout_centerHorizontal="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/app_margin_20dp"
                android:layout_marginRight="@dimen/app_margin_20dp">

                <ImageView
                    android:id="@+id/box_right_image"
                    android:layout_width="65dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ribbon" />

                <TextView
                    android:id="@+id/countdown_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/countdown_days_marin"
                    android:text="2"
                    android:textColor="@color/date_text_color"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Days"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </FrameLayout>

            <ProgressBar
                android:id="@+id/header_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:max="100"
                android:progress="80"
                android:progressDrawable="@drawable/layer_list_progress_drawable" />

            <TextView
                android:id="@+id/progress_bar_text_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 day"
                android:textSize="9sp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="@dimen/margin_10dp" />

            <TextView
                android:id="@+id/progress_bar_text_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 day"
                android:textSize="9sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="@dimen/margin_10dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>